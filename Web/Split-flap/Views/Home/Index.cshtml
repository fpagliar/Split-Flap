<div class="jumbotron">
    <h2>Welcome to our Wall</h2>
    <p class="lead">This webpage lets you log messages that will appear on Francisco&amp;Sophia's split-flap display, set up in their living room wall.</p>
    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            <h2>Send a message!</h2>
            <form>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea id="message" class="form-control" rows="3" maxlength="50"></textarea>
               </div>
            </form>
                <button id="submitMessage" class="btn btn-default">Submit</button>
        </div>
        <div class="col-md-5 col-md-offset-1">
            <h2>History of messages sent:</h2>
            <p id="history"></p>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/home.js")" type="text/javascript"></script>